{% extends '::base.html.twig' %}

{% block body -%}
    <h1>TcxAccount list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthday</th>
                <th>Email</th>
                <th>Creationdate</th>
                <th>Lastmodificationdate</th>
                <th>Tcxpwd</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tcxaccount_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.birthday.format('Y-m-d H:i') }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.creationDate.format('Y-m-d H:i') }}</td>
                <td>{{ entity.LastModificationDate.format('Y-m-d H:i') }}</td>
                <td>{{ entity.tcxpwd }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tcxaccount_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tcxaccount_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tcxaccount_create') }}">
               S'inscrire
            </a>
        </li>
    </ul>
    {% endblock %}
